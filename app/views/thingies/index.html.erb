<h1>Listing thingies</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @thingies.each do |thingy| %>
      <tr>
        <td><%= thingy.image %></td>
        <td><%= link_to 'Show', thingy %></td>
        <td><%= link_to 'Edit', edit_thingy_path(thingy) %></td>
        <td><%= link_to 'Destroy', thingy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Thingy', new_thingy_path %>
